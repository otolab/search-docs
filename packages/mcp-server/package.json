{
  "name": "@search-docs/mcp-server",
  "version": "0.1.0",
  "description": "MCP Server for search-docs - Claude Code integration",
  "type": "module",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "bin": {
    "search-docs-mcp": "dist/server.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "dev": "tsc --watch",
    "start": "node dist/server.js",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix --max-warnings 0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "@search-docs/client": "workspace:*",
    "@search-docs/types": "workspace:*",
    "commander": "^12.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@coeiro-operator/mcp-debug": "^1.0.0",
    "@types/node": "^22.0.0"
  },
  "keywords": [
    "search-docs",
    "mcp",
    "model-context-protocol",
    "claude",
    "document-search"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
