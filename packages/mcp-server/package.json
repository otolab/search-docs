{
  "name": "@search-docs/mcp-server",
  "version": "1.1.3",
  "description": "MCP Server for search-docs - Claude Code integration",
  "type": "module",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "bin": {
    "search-docs-mcp": "dist/server.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc --build --force",
    "clean": "tsc --build --clean",
    "dev": "tsc --watch",
    "start": "node dist/server.js",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix --max-warnings 0",
    "build:fast": "tsc --build",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "@search-docs/cli": "workspace:*",
    "@search-docs/client": "workspace:*",
    "@search-docs/types": "workspace:*",
    "commander": "^12.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@coeiro-operator/mcp-debug": "^1.0.0",
    "@types/node": "^22.0.0"
  },
  "keywords": [
    "mcp",
    "claude-code",
    "vector-search",
    "markdown",
    "documentation"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "author": "naoto.kato@plaid.co.jp",
  "repository": {
    "type": "git",
    "url": "https://github.com/otolab/search-docs.git",
    "directory": "packages/mcp-server"
  }
}
