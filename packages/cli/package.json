{
  "name": "@search-docs/cli",
  "version": "1.0.16",
  "description": "search-docs コマンドラインツール",
  "type": "module",
  "bin": {
    "search-docs": "./dist/index.js"
  },
  "exports": {
    ".": "./dist/index.js",
    "./commands/config/init": "./dist/commands/config/init.js",
    "./commands/server/start": "./dist/commands/server/start.js",
    "./commands/server/stop": "./dist/commands/server/stop.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --build --force",
    "clean": "tsc --build --clean",
    "dev": "tsx src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix --max-warnings 0",
    "build:fast": "tsc --build"
  },
  "dependencies": {
    "@search-docs/client": "workspace:*",
    "@search-docs/server": "workspace:*",
    "@search-docs/types": "workspace:*",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "author": "naoto.kato@plaid.co.jp",
  "repository": {
    "type": "git",
    "url": "https://github.com/otolab/search-docs.git",
    "directory": "packages/cli"
  },
  "keywords": [
    "cli",
    "vector-search",
    "markdown",
    "documentation",
    "search"
  ]
}
